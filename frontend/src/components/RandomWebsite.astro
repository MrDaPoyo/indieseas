---
import { Image } from "astro:assets";

const targetUrl = new URL(Astro.url.origin + "/api/randomWebsite").href;

const response = await fetch(targetUrl, {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

if (!response.ok) {
    throw new Error(
        `Error fetching search results: ${response.statusText} (${response.status})`,
    );
}

const website = await response.json();
const buttons = website.buttons || [];
const formattedDate = new Date(website.scraped_at).toTimeString();
---

<div class="navbar">
    <div class="nav-content">
        <div class="nav-left">
            <strong
                ><a href={website.url} target="_blank" rel="noopener noreferrer"
                    ><h1>{website.title || website.url}</h1></a
                ></strong
            >
            <p>{website.description || "No description provided."}</p>
        </div>
    </div>
    {
        website.buttons && website.buttons.length > 0 && (
            <div class="buttons-bar">
                <marquee
                    class="buttons-marquee"
                    behavior="scroll"
                    direction="left"
                >
                    <div class="buttons-container">
                        {buttons.map((button) => (
                            <div class="button-item">
                                {button.id && (
                                    <a
                                        href={button.links_to_url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                    >
                                        <Image
                                            src={`/api/getButton?buttonId=${button.id}`}
                                            width={88}
                                            height={31}
                                            alt={
                                                button.alt ||
                                                `${website.url} button`
                                            }
                                        />
                                    </a>
                                )}
                            </div>
                        ))}
                    </div>
                </marquee>
            </div>
        )
    }
</div>

<div class="website-frame">
    <iframe
        src={website.url}
        title={website.title || website.url}
        sandbox="allow-scripts allow-same-origin"
        loading="lazy"></iframe>
</div>

<style>
    .website-showcase {
        max-width: 800px;
        margin: 2rem auto;
        padding: 1.5rem;
        border-radius: 8px;
        background-color: var(--background);
        color: var(--text);
        border: 1px solid var(--primary);
    }

    .website-title {
        margin: 0 0 0.5rem 0;
        font-size: 1.5rem;
    }

    .website-title a {
        color: var(--primary);
        text-decoration: none;
    }

    .website-title a:hover {
        text-decoration: underline;
        color: var(--secondary);
    }

    .website-info {
        color: var(--text);
        opacity: 0.8;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .website-frame {
        width: 100%;
        margin-bottom: 1.5rem;
        overflow: hidden;
        box-shadow: 0 1px 8px rgba(87, 136, 255, 0.3);
        background-color: aliceblue;
        display: flex;
        flex-grow: 1;
        border: none;
        height: 80vh;
    }

    iframe {
        width: 100%;
        height: 100%;
        display: flex;
        flex-grow: 1;
        border: none;
    }

    .buttons-section {
        margin-top: 2rem;
    }

    .buttons-section h3 {
        color: var(--secondary);
    }

    .buttons-container {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: 0.5rem;
    }

    .button-item {
        transition: transform 0.2s ease;
    }

    .button-item:hover {
        transform: scale(1.05);
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 1rem;
        border: 1px solid var(--primary);
        color: white;
    }
    .nav-content {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }
    .nav-left,
    .nav-center,
    .nav-right {
        align-items: center;
        height: 100%;
    }
    (.nav-left, .nav-right, .nav-center) > * {
        margin: 0 1rem;
    }
    .nav-left {
        text-align: left;
    }
    .nav-center {
        text-align: center;
    }
    .nav-right {
        text-align: right;
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }
</style>
